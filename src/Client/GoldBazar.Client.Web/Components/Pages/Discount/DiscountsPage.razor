@page "/discounts"
@layout Layout.DashboardLayout
@using GoldBazar.Client.Web.Components.Shared.Icons
@using GoldBazar.Client.Web.Components.Pages.Discount.Components

<PageTitle>GOLD BAZAR - Discounts</PageTitle>

<main class="mt-[20px] relative overflow-hidden mx-3 flex flex-col">
    <div class="h-[220px] px-3 py-4 mb-3 text-white rounded-[22px] bg-[linear-gradient(270deg,_#5047DF_0%,_#7F5EF3_100%)]"
        w-full">
        <div>
            <div class="flex  justify-between">
                <h4 class="text-lg font-bold mb-3">داشكاندنی VIP</h4>
                <StarIcon Color="#FDBF23" Height="21" Width="21" />
            </div>
            <span class="text-base font-light"> تایبەت بە زەڕەنگەری سەرکار</span>

        </div>
        <div class="flex my-5">
            <ClockIcon Color="#fff" Height="20" Width="20" />
            <span class="text-sm font-light px-2">٢ ڕۆژ ماوە</span>
        </div>
        <div class="h-[72px] p-3 bg-[#8575F1] rounded-[18px]">
            <h4 class="text-lg font-light">داشكاندن</h4>
            <span class="text-base font-light">لەسەر ٣٥ لە بەرهەمەکانی زەڕەنگەری سەرکار</span>
        </div>
    </div>

    <DiscountItem isValid="true" />
    <DiscountItem isValid="false" />
    <div class="flex flex-col my-3">
        <span class="text-[#989898] font-light text-base">داشکاندنەکانی تر</span>
        <DiscountProductList />
    </div>

</main>

