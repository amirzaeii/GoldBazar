    <div class="flex h-[130px] items-center justify-center">
        <img src="@Product.Image" class="h-[100px] w-auto" alt="@Product.Name" />
    </div>

    <hr class="h-[1px] border-t border-[#07070736]" />

    <div class="px-3 py-2">
        <h2 class="text-base font-normal">@Product.Name</h2>
        <div class="mt-2 flex items-center gap-2">
            @if (Product.DiscountPrice != null)
            {
                <span class="text-sm font-bold text-[#7A7A7A] line-through">@Product.Price</span>
                <span class="text-base font-bold text-[#020202]">@Product.DiscountPrice</span>
            }
            else
            {
                <span class="text-base font-bold text-[#020202]">@Product.Price</span>
            }
        </div>
        <button class="size-sm h-[34px] w-full rounded-[8.53px] bg-[#8D62F954] text-[#474747]">
            ئەڤیتا ستۆر
        </button>
    </div>
</div>

@code {
    [Parameter]
    public required Product Product { get; set; }
}