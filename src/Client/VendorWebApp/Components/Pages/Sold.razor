<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>فرۆشراوەکان - Gold Bazar</title>
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/sold.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="sold-container">
        <!-- Header with navigation buttons -->
        <div class="header">
            <h1 class="page-title">فرۆشراوەکان</h1>
            
            <button class="nav-button back-button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M15 18l-6-6 6-6"/>
                </svg>
            </button>
        </div>

        <!-- Search bar -->
        <div class="search-bar">
            <input type="text" placeholder="گەڕان">
            <button class="search-button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
            </button>
        </div>

        <!-- Sold Items List -->
        <div class="sold-list">
            <!-- Date Divider -->
            <div class="date-divider">
                <span>ئەمڕۆ</span>
            </div>
            
            <!-- Sold Item 1 -->
            <div class="sold-item">
                <div class="sold-image">
                    <img src="images/gwara1.png" alt="گوارەی عەیارە 21">
                </div>
                <div class="sold-details">
                    <h3 class="sold-title">گوارەی عەیارە 21</h3>
                    <div class="sold-info">
                        <div class="sold-price">
                            <span class="price-value">$179</span>
                        </div>
                        <div class="sold-quantity">
                            <span class="quantity-label">بڕ:</span>
                            <span class="quantity-value">2</span>
                        </div>
                    </div>
                    <div class="sold-date">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#666" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        <span>1 / 4 / 2025</span>
                    </div>
                </div>
            </div>
            
            <!-- Sold Item 2 -->
            <div class="sold-item">
                <div class="sold-image">
                    <img src="images/gwara2.png" alt="گوارەی عەیارە 24">
                </div>
                <div class="sold-details">
                    <h3 class="sold-title">گوارەی عەیارە 24</h3>
                    <div class="sold-info">
                        <div class="sold-price">
                            <span class="price-value">$210</span>
                        </div>
                        <div class="sold-quantity">
                            <span class="quantity-label">بڕ:</span>
                            <span class="quantity-value">1</span>
                        </div>
                    </div>
                    <div class="sold-date">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#666" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        <span>1 / 4 / 2025</span>
                    </div>
                </div>
            </div>
            
            <!-- Date Divider -->
            <div class="date-divider">
                <span>دوێنێ</span>
            </div>
            
            <!-- Sold Item 3 -->
            <div class="sold-item">
                <div class="sold-image">
                    <img src="images/gwara1.png" alt="گوارەی عەیارە 22">
                </div>
                <div class="sold-details">
                    <h3 class="sold-title">گوارەی عەیارە 22</h3>
                    <div class="sold-info">
                        <div class="sold-price">
                            <span class="price-value">$195</span>
                        </div>
                        <div class="sold-quantity">
                            <span class="quantity-label">بڕ:</span>
                            <span class="quantity-value">3</span>
                        </div>
                    </div>
                    <div class="sold-date">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#666" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        <span>31 / 3 / 2025</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="js/sold.js"></script>
</body>
</html> 