<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Avita Jewelry - Gold Bazar</title>
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/profile.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="profile-container">
        <!-- Header with navigation buttons -->
        <div class="header">
          
            <button class="nav-button menu-button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="1"></circle>
                    <circle cx="19" cy="12" r="1"></circle>
                    <circle cx="5" cy="12" r="1"></circle>
                </svg>
            </button>

            <!-- Popup menu -->
            <div class="popup-menu" id="moreMenu">
                <div class="popup-menu-item">
                    <img src="icons/bg change.svg" alt="">
                    <span>گۆڕینی وێنەی پشتەوە</span>
                </div>
                <div class="popup-menu-item">
                    <img src="icons/pro.svg" alt="">
                    <span>گۆڕینی وێنەی پڕۆفایل</span>
                </div>
                <a href="sold.html" class="popup-menu-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="2" y="4" width="20" height="16" rx="2" ry="2"></rect>
                        <line x1="6" y1="12" x2="18" y2="12"></line>
                        <line x1="6" y1="8" x2="9" y2="8"></line>
                        <line x1="6" y1="16" x2="9" y2="16"></line>
                    </svg>
                    <span>فرۆشراوەکان</span>
                </a>
                <a href="notifications.html" class="popup-menu-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                        <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                    </svg>
                    <span>ئاگادارکردنەوەکان</span>
                </a>
            </div>

            <button class="nav-button back-button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M15 18l-6-6 6-6"/>
                </svg>
            </button>
        </div>

        <!-- Store banner image -->
        <div class="banner-image">
            <img src="images/bg.png" alt="Jewelry display">
        </div>

        <!-- Store logo and name -->
        <div class="store-profile">
            <div class="store-logo">
                <div class="logo-inner">
                    <img src="images/pro.png" alt="Jewelry display">

                </div>
            </div>
            <h1 class="store-name">Avita Jewelry</h1>
            <p class="store-location">Soran dlshad</p>
            <p class="store-address">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                    <circle cx="12" cy="10" r="3"></circle>
                </svg>
                سلێمانی - بەڕامبەر سەرا
            </p>
        </div>

        <!-- Store rating -->
        <div class="store-rating">
            <div class="rating-box">
                <span class="rating-number">4</span>
                <svg class="star-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#FFD700">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                </svg>
                <span class="rating-count">1122</span>
            </div>
        </div>

        <!-- Product categories -->
        <div class="category-section">
            <h3 class="section-title">بەرهەمەکانم</h3>
            <div class="categories">
                <button class="category-button">مستیلە</button>
                <button class="category-button active">گوارە</button>
                <button class="category-button">پشتێن</button>
                <button class="category-button">هەمووی</button>
                <button class="category-button">ملوانکە</button>
                <button class="category-button">پاوانە</button>
                <button class="category-button">ساعات</button>
                <button class="category-button">بازنە</button>
            </div>
        </div>

        <!-- Search bar -->
        <div class="search-bar">
            <input type="text" placeholder="گەڕان">
            <button class="search-button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
            </button>
        </div>

        <!-- Product grid -->
        <div class="product-grid">
            <!-- Product 1 -->
            <a href="product-details.html" class="product-card">
                <div class="product-badge">
                    <img src="icons/offer.svg" >
                </div>
                
                <div class="product-image">
                    <img src="images/gwara1.png" alt="گوارەی عەیارە 21">
                </div>
                <div class="product-info">
                    <h3 class="product-title">گوارەی عەیارە 21</h3>
                    <div class="product-price">
                        <span class="current-price">$١٧٩</span>
                        <span class="original-price">$١٤٩</span>
                    </div>
                 </div>
            </a>

            <!-- Product 2 -->
            <a href="product-details.html" class="product-card">
                <div class="product-badge">
                    <img src="icons/offer.svg" >
                </div>
                
                <div class="product-image">
                    <img src="images/gwara2.png" alt="گوارەی عەیارە 21">
                </div>
                <div class="product-info">
                    <h3 class="product-title">گوارەی عەیارە 21</h3>
                    <div class="product-price">
                        <span class="current-price">$١٧٩</span>
                        <span class="original-price">$١٤٩</span>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <script src="js/profile.js"></script>
</body>
</html> 