@inject IShopService ShopService
<div class="store">
    <div class="store_content">
        @if(shop == null)
        {
            <p>Loading...</p>
        }
        else
        {
        <!-- Logo Section -->
            <div class="store_logo-section">
                <div class="store_logo-container">
                    <img src="assets/Image/avita.svg" alt="Store Logo" class="store_logo">
                </div>
                <div class="rating-pill">
                    <span class="rating-pill__value">@shop.Rate</span>
                    <img src="assets/Icons/star.svg" alt="Star">
                    <span class="rating-pill__count"></span>
                </div>
            </div>

        <!-- Info Section -->
            <div class="store_info">
                <div class="store_name-container">
                    <span class="store_name">@shop?.Name</span>
                    <img src="assets/Icons/store.svg" alt="Store Icon" class="store_home-icon">
                </div>
                <div class="store_location">
                    <span>@shop?.City</span><span>@shop?.Address</span>
                    <img src="assets/Icons/location.svg" alt="Location Icon" class="store_location-icon">
                </div>

            <!-- Star Rating -->
@*             <div class="rating">
                @for (int i = 1; i <= 5; i++)
                {
                        <svg class="star-solid" viewBox="0 0 576 512" height="1em"
                            fill="@(i <= (shop?.Rate ?? 0) ? "#FFA500" : "#ccc")">
