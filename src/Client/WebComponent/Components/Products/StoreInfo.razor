                            </path>
                        </svg>
                    }
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public int ShopId { get; set; }

    private Shop shop {get; set;} = default!;
    protected override async Task OnInitializedAsync()
    {
        if (ShopId != 0)
        {
            shop = await ShopService.GetShopById(ShopId) ?? throw new InvalidOperationException("Shop not found");
        }
    }
}
