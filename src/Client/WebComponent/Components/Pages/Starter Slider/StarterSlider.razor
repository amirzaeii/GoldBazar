<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="UTF-8">
     <link rel="stylesheet" href="style/starter_slider.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="HandheldFriendly" content="true">
    <title>Gold Bazar - Onboarding</title>
    <style>
     
    </style>
</head>
<body>
    <div class="slider-container">
        <div class="logo-container">
          <img src="assets/Icons/gold-logo.svg" alt="">
         </div>

        <div class="slides">
            <!-- Delivery Slide -->
            <div class="slide">
                <div class="slide-image-container">
                    <img src="assets/Icons/IRAQ LOGO.svg" alt="Delivery box" class="slide-image">
                </div>
                <p class="slide-text">یەکەمین و گەورەترین بازاڕی ئۆنلاینی ئاڵتون و زێڕ لە عێراق</p>
            </div>

            <!-- Van Slide -->
            <div class="slide">
                <div class="slide-image-container">
                    <img src="assets/Icons/van.svg" alt="Delivery van" class="slide-image">
                </div>
                <p class="slide-text">گەیاندنی خێرا و دڵنیا بۆ هەموو شوێنێک</p>
            </div>

            <!-- Gold Investment Slide -->
            <div class="slide">
                <div class="slide-image-container">
                    <img src="assets/Icons/gold-slide.svg" alt="Gold investment" class="slide-image">
                </div>
                <p class="slide-text">نرخی ڕۆژانەی ئاڵتوون و باشترین ئۆفەرەکان لەلای ئێمەیە</p>
            </div>
        </div>

       
    </div>
     <div class="navigation-dots"  >
            <div class="dot active"></div>
            <div class="dot"></div>
            <div class="dot"></div>
        </div>

        <button class="back-button">دواتر</button>

        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const slides = document.querySelector('.slides');
                const dots = document.querySelectorAll('.dot');
                const backButton = document.querySelector('.back-button');
                let currentSlide = 0;
                const totalSlides = dots.length;
    
                function updateSlides() {
                    // For RTL movement
                    slides.style.transform = `translateX(${currentSlide * 100}%)`;
                    
                    // Update dots
                    dots.forEach((dot, index) => {
                        dot.classList.toggle('active', index === currentSlide);
                    });
    
                    // Update button text
                    backButton.textContent = currentSlide === totalSlides - 1 ? 'به‌رده‌وامبه' : 'دواتر';
                }
    
                // Add click events to dots
                dots.forEach((dot, index) => {
                    dot.addEventListener('click', () => {
                        currentSlide = index;
                        updateSlides();
                    });
                });
    
                // Add click event to back button
                backButton.addEventListener('click', () => {
                    if (currentSlide < totalSlides - 1) {
                        currentSlide++;
                        updateSlides();
                    } else {
                        window.location.href = 'index.html';
                    }
                });
    
                // Touch handling
                let touchStartX = 0;
                let touchStartY = 0;
    
                slides.addEventListener('touchstart', (e) => {
                    touchStartX = e.touches[0].clientX;
                    touchStartY = e.touches[0].clientY;
                });
    
                slides.addEventListener('touchmove', (e) => {
                    if (!touchStartX || !touchStartY) return;
    
                    const touchEndX = e.touches[0].clientX;
                    const touchEndY = e.touches[0].clientY;
                    const diffX = touchStartX - touchEndX;
                    const diffY = touchStartY - touchEndY;
    
                    if (Math.abs(diffX) > Math.abs(diffY)) {
                        e.preventDefault();
                    }
                });
    
                slides.addEventListener('touchend', (e) => {
                    if (!touchStartX || !touchStartY) return;
    
                    const touchEndX = e.changedTouches[0].clientX;
                    const touchEndY = e.changedTouches[0].clientY;
                    const diffX = touchStartX - touchEndX;
                    const diffY = touchStartY - touchEndY;
                    const swipeThreshold = 50;
    
                    if (Math.abs(diffX) > Math.abs(diffY) && Math.abs(diffX) > swipeThreshold) {
                        if (diffX < 0 && currentSlide < totalSlides - 1) {
                            // Swipe right
                            currentSlide++;
                            updateSlides();
                        } else if (diffX > 0 && currentSlide > 0) {
                            // Swipe left
                            currentSlide--;
                            updateSlides();
                        }
                    }
    
                    touchStartX = null;
                    touchStartY = null;
                });
            });
           
        </script>
</body>
</html>