@inject IJSRuntime JS

<div class="slider-container">
    <div class="slider">
        @for (var i = 0; i < Slides.Count; i++)
        {
            <div class="carousel-slide @(i == currentIndex ? "active" : "")">
                <img src="@Slides[i].ImageUrl" class="carousel-image">
                <div class="carousel-caption">
                    <h3>@Slides[i].Title</h3>
                    <p>@Slides[i].Description</p>
                </div>
            </div>
        }
    </div>
    <div class="carousel-dots">
        @for (var i = 0; i < Slides.Count; i++)
        {
            <span class="dot @(i == currentIndex ? "active" : "")"
                  onclick="currentSlide(@(i + 1))"></span>
        }
    </div>
</div>

<script>
    let slideIndex = 0;
    let autoSlideInterval;

    window.addEventListener('load', () => {
        startSlideShow();
        showSlides();
    });

    function plusSlides(n) {
        stopSlideShow();
        slideIndex += n;
        showSlides();
        startSlideShow();
    }

    function currentSlide(n) {
        stopSlideShow();
        slideIndex = n - 1;  // Correct for zero-indexing
        showSlides();
        startSlideShow();
    }

    function showSlides() {
        let slides = document.getElementsByClassName("carousel-slide");
        let dots = document.getElementsByClassName("dot");

        if (slides.length === 0) return;  // Early exit if no slides are available

        // Reset slideIndex if out of bounds
        if (slideIndex >= slides.length) {
            slideIndex = 0;  // Go back to the first slide
        }
        if (slideIndex < 0) {
            slideIndex = slides.length - 1;  // Go to the last slide
        }

        // Hide all slides
        for (let i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }

        // Deactivate all dots
        for (let i = 0; i < dots.length; i++) {
            dots[i].classList.remove("active");
        }

        // Show the current slide
        slides[slideIndex].style.display = "block";
        dots[slideIndex].classList.add("active");
    }

    function startSlideShow() {
        autoSlideInterval = setInterval(() => {
            slideIndex++;
            showSlides();
        }, 4000);  // Change every 4 seconds
    }

    function stopSlideShow() {
        clearInterval(autoSlideInterval);
    }

</script>

@code {
    [Parameter]
    public List<CarouselSlide> Slides { get; set; } = new();

    private int currentIndex = 0;

    protected override void OnInitialized()
    {
        if (Slides == null || !Slides.Any())
        {
            Slides = new List<CarouselSlide>
            {
                new CarouselSlide
                {
                    ImageUrl = "_content/WebComponent/assets/Image/banner.svg",
                    Title = "داشکاندن ٢٠٪",
                    Description = "لە ڕیشتەکانی سێرکان"
                },
                new CarouselSlide
                {
                    ImageUrl = "_content/WebComponent/assets/Image/banner.svg",
                    Title = "کۆلێکشنی نوێ",
                    Description = "بەهاری ٢٠٢٤"
                },
                new CarouselSlide
                {
                    ImageUrl = "_content/WebComponent/assets/Image/banner.svg",
                    Title = "پێشنیاری تایبەت",
