@page "/profile"
@inject NavigationManager Navigation

<div class="profile-page">
    <!-- Language Selector -->
    <div class="language-selector">
        <button class="language-tab @(selectedLanguage == "English" ? "active" : "")" @onclick="@(() => SetLanguage("English"))">English (EN)</button>
        <button class="language-tab @(selectedLanguage == "Arabic" ? "active" : "")" @onclick="@(() => SetLanguage("Arabic"))">Arabic (ع)</button>
        <button class="language-tab @(selectedLanguage == "Kurdish" ? "active" : "")" @onclick="@(() => SetLanguage("Kurdish"))">Kurdish (ک)</button>
    </div>

    <!-- Profile Info -->
    <div class="profile-info">
        <img src="/assets/Icons/profile.svg" alt="Profile Image" class="profile-img" />
        <h3 class="profile-name">Hana Hardy</h3>
        <p class="profile-phone">+964********</p>
    </div>

    <!-- Menu -->
    <ul class="menu">
        <li class="menu-item">
            <a href="/orderhistory" class="menu-link">
                <img src="/assets/Icons/order.svg" alt="Orders Icon" class="icon" />
                Orders
            </a>
        </li>
        <li class="menu-item">
            <a href="/manageprofile" class="menu-link">
                <img src="/assets/Icons/skills.png" alt="account Icon" class="icon" />
                Manage profile
            </a>
        </li>
        <li class="menu-item">
            <a href="/notifications" class="menu-link">
                <img src="/assets/Icons/notification.png" alt="Notifications Icon" class="icon" />
                Notifications
            </a>
        </li>
        <li class="menu-item">
            <a href="/change-password" class="menu-link">
                <img src="/assets/Icons/lock.svg" alt="Change Password Icon" class="icon" />
                Change Password
            </a>
        </li>
        <li class="menu-item">
            <a href="/language" class="menu-link">
                <img src="/assets/Icons/policy.png" alt="policy Icon" class="icon" />
                Private policy
            </a>
        </li>
        <li class="menu-item">
            <a href="/signout" class="menu-link">
                <img src="/assets/Icons/logout.png" alt="sign out Icon" class="icon" />
                Sign out
            </a>
        </li>
    </ul>
</div>

@code {
    private string selectedLanguage = "English"; // Default selected language

    private void SetLanguage(string language)
    {
        selectedLanguage = language;
    }
}
