 @if(shopId == 0)
 {
    <MudSkeleton></MudSkeleton>
 }
 else{
    <!-- Left Button -->
        <div class="col-4 text-end d-flex justify-content-start">
            <button class="btn-profile rounded-circle" aria-label="Profile" onclick="window.location.href='/profile/shop/@shopId'">
                <img src="@_imageService.GetShopLogoUrl(shopId).Replace("\"","")" alt="Profile" >
            </button>
        </div>

        <!-- Center Offer -->
        <div class="col-4 d-flex justify-content-center">
            <div class=" p-2 bg-light ">
                <div class="offer-card offer-card-text">
                    <img src="https://goldbazarblob.blob.core.windows.net/images/logo/logo.png" width="60" height="60" alt="offer" class="offer-icon">
                </div>
            </div>
        </div>

        <!-- Right Logo -->
        <div class="col-4 text-start d-flex justify-content-end">
            <button class=" btn-icon rounded-circle" aria-label="Notification" onclick="window.location.href='/notification/@shopId'">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M12 17.8476C17.6392 17.8476 20.2481 17.1242 20.5 14.2205C20.5 11.3188 18.6812 11.5054 18.6812 7.94511C18.6812 5.16414 16.0452 2 12 2C7.95477 2 5.31885 5.16414 5.31885 7.94511C5.31885 11.5054 3.5 11.3188 3.5 14.2205C3.75295 17.1352 6.36177 17.8476 12 17.8476Z" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M14.3888 20.8572C13.0247 22.3719 10.8967 22.3899 9.51947 20.8572" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
        </div>
    }