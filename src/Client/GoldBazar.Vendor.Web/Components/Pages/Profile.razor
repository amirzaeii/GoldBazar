@page "/profile/shop/{shopId:int}"
@if(shop == null){
    <MudSkeleton></MudSkeleton>
}
else
{
 <div class="w-100 d-flex justify-content-between position-absolute top-1 z-3 px-3">
        <button class="btn-icon btn-icon-simple bg-white rounded-3"
            onclick="window.location.href='dashboard.html'"><img src="icons/arrow.svg" alt=""></button>

        <div class="position-relative">
            <button id="moreBtn" class="btn-icon btn-icon-simple bg-white rounded-3">
                ...
            </button>
            <div class="popup-menu bg-white rounded-3 shadow-sm" id="popupMenu">
                <button class="popup-item d-flex align-items-center gap-2 w-100 border-0 bg-transparent py-2 px-3">
                    <span>change banner photo</span>
                </button>
                <button class="popup-item d-flex align-items-center gap-2 w-100 border-0 bg-transparent py-2 px-3">
                    <span>change logo photo</span>
                </button>
            </div>
        </div>
         </div>
    <!-- Profile Header -->
    <div class="profile-header">
        <div class="profile-background">
            <img src="@shop.BannerUrl" alt="@shop.Name" class="background-image">
        </div>
        <div class="profile-content text-center">
            <div class="profile-logo">
                <div class="logo-container">
                    <img src="@shop.LogoUrl" alt="@shop.Name" class="profile-image">
                </div>
            </div>
            <h4 class="mb-2">@shop.Name</h4>
            <p class="text-muted">@shop.OwnerName</p>
            <p class="text-muted">
            <div class="">
                 <p class="text-muted">@shop.CityName</p>
                <p class="text-muted">@shop.Address</p>
            </div>
            </p>
            <div class="mt-2">
                <span class="rating">
                    <span class="stars">⭐</span>
                    <span class="rating-number">4</span>
                </span>
                <span class="text-muted">@shop.ContactNo</span>
            </div>
        </div>
    </div>
    <div class="container">
        <!-- Category Tabs -->
        <div class="my-4">
            <div class="d-flex flex-wrap gap-1">
                <button class="tab-btn active">All</button>
                <button class="tab-btn">Earrings</button>
                <button class="tab-btn">Necklaces</button>
                <button class="tab-btn">Bracelets</button>
                <button class="tab-btn">Rings</button>
                <button class="tab-btn">Watches</button>
                <button class="tab-btn">Anklets</button>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="mb-4">
            <div class="input-group">
                <input type="search" class="input-field rounded-3" placeholder="Search" aria-label="Search">
            </div>
        </div>

        <!-- Products Section -->
        <section class="products">
           
        </section>
    </div>
}