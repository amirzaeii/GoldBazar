                </button>
                <button class="popup-item d-flex align-items-center gap-2 w-100 border-0 bg-transparent py-2 px-3">
                    <img src="icons/change-pro.svg" alt="" class="icon">
                    <span>گۆڕینی وێنەی پڕۆفایل</span>
                </button>
            </div>
        </div>
         </div>
    <!-- Profile Header -->
    <div class="profile-header">
        <div class="profile-background">
            <img src="images/pro-bg.png" alt="Store Background" class="background-image">
        </div>
        <div class="profile-content text-center">
            <div class="profile-logo">
                <div class="logo-container">
                    <img src="images/logo.png" alt="Jewelry Logo" class="profile-image">
                </div>
            </div>
            <h4 class="mb-2">Sarzhin Jewelry</h4>
            <p class="text-muted">Sarzhin</p>
            <p class="text-muted">
            <div class="">

                <p class="text-muted">Sulaymaniyah</p>
            </div>
            </p>
            <div class="mt-2">
                <span class="rating">
                    <span class="stars">⭐</span>
                    <span class="rating-number">4</span>
                </span>
                <span class="text-muted">(1122)</span>
            </div>
        </div>
    </div>
    <div class="container">
        <!-- Category Tabs -->
        <div class="my-4">
            <div class="d-flex flex-wrap gap-1">
                <button class="tab-btn active">All</button>
                <button class="tab-btn">Earrings</button>
                <button class="tab-btn">Necklaces</button>
                <button class="tab-btn">Bracelets</button>
                <button class="tab-btn">Rings</button>
                <button class="tab-btn">Watches</button>
                <button class="tab-btn">Anklets</button>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="mb-4">
            <div class="input-group">
                <input type="search" class="input-field rounded-3" placeholder="Search" aria-label="Search">
                <img src="icons/search.svg" alt="Search" class="search-icon icon">
            </div>
        </div>

        <!-- Products Section -->
        <section class="products">
            <div class="w-100 d-flex flex-wrap gap-1 align-items-center justify-content-between product-grid">

                <div class="col-md-3 col-lg-4">
                    <div class="product-card" onclick="window.location.href='product-details.html'">
                       
                        <div class="product-container" style="position: relative;">
                        <div class="product-header">
                            <img src="icons/offer.svg" alt="Rating" class="">
                            <button class="favorite-btn">
                                <img src="icons/Heart.svg" alt="Add to favorites" />
                            </button>
                        </div> 
                    </div>
                        <img src="images/gwara4.png" alt="گوارەی عەیارە ٢١" class="product-img">
