@if (Order == null)
{
    <p>Order not found</p>
    return;
}

<div class="flex items-center justify-between border border-[#E0E0E0] rounded-xl p-4">
    <div class="flex flex-col">
        <span class="text-[#1A1A1A]">@Order.OrderItems.FirstOrDefault()?.ProductName</span>
        <span class="text-[#666666]">@Order.Date.Year</span>
    </div>
    <div class="py-2 px-4 rounded-full text-sm font-bold @getOrderColorByStatus()">
        @orderStatusToString()
    </div>
</div>

@code {
    [Parameter] public GoldBazar.Shared.Components.Services.OrderDto? Order { get; set; }

    private string getOrderColorByStatus()
    {
        return (OrderStatus)Enum.Parse(typeof(OrderStatus), Order!.Status) switch
        {
            @* TODO: complete text and bg for these base on what you want *@

            OrderStatus.Submitted => "bg-[#FFF7ED] text-[#B45C3D]",
            OrderStatus.AwaitingValidationFromVendor => "bg-[#E8F0FE] text-[#1A73E8]",
            OrderStatus.AwaitingValidationFromGB => "bg-[#E8F0FE] text-[#1A73E8]",
            OrderStatus.Shipping => "bg-[#E8F0FE] text-[#1A73E8]",
            OrderStatus.Shipped => "bg-[#E8F0FE] text-[#1A73E8]",
            OrderStatus.CancelledByBuyer => "bg-[#FCE8E6] text-[#D93025]",
            OrderStatus.CancelledByVendor => "bg-[#FCE8E6] text-[#D93025]",
            OrderStatus.CancelledByGB => "bg-[#FCE8E6] text-[#D93025]",
            _ => "bg-[#E0E0E0] text-[#666666]"
        };
    }

    private string orderStatusToString()
    {
        return (OrderStatus)Enum.Parse(typeof(OrderStatus), Order!.Status) switch
        {
            @* TODO: complete text and bg for these base on what you want *@
            OrderStatus.Submitted => "نێردراو",
            OrderStatus.AwaitingValidationFromVendor => "چاوەڕێی پشتڕاستکردنەوە لە فرۆشیارەوە",
            OrderStatus.AwaitingValidationFromGB => "چاوەڕێی پشتڕاستکردنەوە لە لایەن GB",
            OrderStatus.Shipping => "لە بەرێوەبردنی نێردنەوە",
            OrderStatus.Shipped => "نێردرا",
            OrderStatus.CancelledByBuyer => "هەڵوەشاوە لەلایەن کڕیارەوە",
            OrderStatus.CancelledByVendor => "هەڵوەشاوە لەلایەن فرۆشیارەوە",
            OrderStatus.CancelledByGB => "هەڵوەشاوە لەلایەن GBەوە",
            _ => "ناناسراو "
        };
    }
}
