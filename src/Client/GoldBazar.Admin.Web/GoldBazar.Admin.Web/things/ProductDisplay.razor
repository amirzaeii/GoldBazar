@using System.Globalization
@using static GoldBazar.Admin.Web.Components.Pages.MoneyProcessing

@if (Goldsmith != null)
{
    <div class="product-details">
        <h3>@Goldsmith.GoldsmithName - Products</h3>
        <div class="product-grid">
            @foreach (var product in Goldsmith.Products)
            {
                <div class="product-card">
                    <h4>@product.Name</h4>
                    <p>Price: @product.Price.ToString("C", CultureInfo.InvariantCulture)</p>
                    <p>Date: @product.Date.ToString("yyyy-MM-dd")</p>
                    <p>Status: @(product.IsPaid ? "Paid" : "Pending")</p>
                </div>
            }
        </div>
        <button class="close-btn" @onclick="OnClose.InvokeAsync">Close</button>
    </div>
}

@code {
    [Parameter, EditorRequired] public Order Goldsmith { get; set; }
    [Parameter, EditorRequired] public EventCallback OnClose { get; set; }
}
