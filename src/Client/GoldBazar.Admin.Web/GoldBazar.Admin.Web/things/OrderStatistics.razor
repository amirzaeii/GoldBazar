<div class="order-statistics">
    <!-- Delivered Orders Card -->
    <div class="card delivered-card">
        <h2 class="card-title">Previous Orders</h2>
        <div class="status-head">
            <div class="status-badge delivered">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 6L9 17l-5-5" />
                </svg>
                Delivered
            </div>
            <div class="big-number delivered-number">@DeliveredOrders</div>
        </div>
        @foreach (var stat in DeliveredStats)
        {
            <div class="stat-row">
                <span class="stat-label">@stat.Label</span>
                <span class="stat-value">@stat.Value Items</span>
            </div>
        }
    </div>

    <!-- On The Way Card -->
    <div class="card">
        <h2 class="card-title">Orders in Transit</h2>
        <div class="status-head">
            <div class="status-badge on-way">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2v4m0 12v4M4.93 4.93l2.83 2.83m8.48 8.48l2.83 2.83M2 12h4m12 0h4M4.93 19.07l2.83-2.83m8.48-8.48l2.83-2.83" />
                </svg>
                On The Way
            </div>
            <div class="big-number on-way-number">@OrdersInTransit</div>
        </div>
        <table class="order-table">
            <thead>
                <tr>
                    <th>Product Code</th>
                    <th>Deliver Guy</th>
                    <th>Phone Number</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in TransitOrders)
                {
                    <tr>
                        <td>@order.ProductCode</td>
                        <td>@order.DeliverGuy</td>
                        <td>@order.PhoneNumber</td>
                        <td>@order.Location</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private int DeliveredOrders = 13564;
    private int OrdersInTransit = 23;

    private List<OrderStat> DeliveredStats = new()
    {
        new OrderStat { Label = "Today", Value = 123 },
        new OrderStat { Label = "Last Week", Value = 670 },
        new OrderStat { Label = "Last Month", Value = 1203 }
    };

    private List<TransitOrder> TransitOrders = new()
    {
        new TransitOrder { ProductCode = "6753", DeliverGuy = "Sarhang Kamal", PhoneNumber = "770-1234567", Location = "Slemany" },
        new TransitOrder { ProductCode = "2456", DeliverGuy = "Rzgar Kamil", PhoneNumber = "770-1234567", Location = "Hawler" },
        new TransitOrder { ProductCode = "3456", DeliverGuy = "Jwanro Jamil", PhoneNumber = "770-1234567", Location = "Slemany" }
    };

    public class OrderStat
    {
        public string Label { get; set; }
        public int Value { get; set; }
    }

    public class TransitOrder
    {
        public string ProductCode { get; set; }
        public string DeliverGuy { get; set; }
        public string PhoneNumber { get; set; }
        public string Location { get; set; }
    }
}
