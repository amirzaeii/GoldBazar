@inject CatalogService StyleService
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@Title</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="form" Model="Material">
            <MudTextField T="string"
                          Label="Material Name"
                          Required="true"
                          RequiredError="Name is required!"
                          @bind-Value="Material.Name" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Create</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    private MudForm form = default!;
    [Parameter] public string Title { get; set; } = default!;
    [Parameter] public MaterialDTO Material { get; set; } = default!;
    [Parameter][EditorRequired] public Func<MaterialDTO, Task>? OnSave { get; set; }
    void Cancel() => MudDialog.Cancel();

    async Task Submit()
    {
        await form.Validate();
        if (!form.IsValid) return;

        try
        {
            if (OnSave != null)
            {
                MudDialog.Close(DialogResult.Ok(true));
                await OnSave.Invoke(Material);
            }
        }
        catch
        {
            Snackbar.Add("Entered Material already exists", Severity.Error);
        }
    }
}

