<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled"
                   Color="@Color"
                   OnClick="() => DialogInstance.Close(DialogResult.Ok(true))">
            @ButtonText
        </MudButton>
        <MudButton Variant="Variant.Text"
                   OnClick="Cancel">
            Cancel
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance DialogInstance { get; set; } = default!;
    [Parameter] public string ContentText { get; set; } = "";
    [Parameter] public string ButtonText { get; set; } = "OK";
    [Parameter] public Color Color { get; set; } = Color.Primary;

    void Cancel() => DialogInstance.Cancel();
}