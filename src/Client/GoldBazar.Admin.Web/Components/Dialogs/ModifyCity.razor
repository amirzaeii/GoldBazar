@inject RegionService regionService
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<MudDialog MaxWidth="MaxWidth.Small" FullWidth="true">
    <TitleContent>
        <MudText Typo="Typo.h6">@Title</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="form" Model="City">
            <!-- Governorate selector -->
            <MudSelect T="int"
                       Label="Governorate"
                       Required="true"
                       RequiredError="Please select a governorate"
                       @bind-Value="City.GovernorateId">
                @foreach (var gov in _governorates)
                {
                    <MudSelectItem Value="gov.Id">@gov.Name</MudSelectItem>
                }
            </MudSelect>

            <!-- City name -->
            <MudTextField T="string"
                          Label="City Name"
                          Required="true"
                          RequiredError="Name is required!"
                          @bind-Value="City.Name" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

